function getColor(value, threshold) {
    const percentage = (value / threshold) * 100;
    if (percentage < 50) {
        return '#B90E0A';
    } else if (percentage >= 50 && percentage < 80) {
        return '#FFED5F';
    } else if (percentage >= 80 && percentage < 100) {
        return '#33B864';
    } else {
        return '#006400';
    }
}

