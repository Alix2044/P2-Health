// Set a callback to run when the Google Visualization API is loaded.
document.addEventListener('DOMContentLoaded', function() {
    var data = JSON.parse('<%- JSON.stringify(totalNutrition) %>');

    drawNutrientPieChart('Calories', data.calories, thresholds.calories, 'caloriesChart');
    drawNutrientPieChart('Protein', data.protein, thresholds.protein, 'proteinChart');
    drawNutrientPieChart('Carbs', data.carbs, thresholds.carbohydrates, 'carbsChart');
    drawNutrientPieChart('Fats', data.fat, thresholds.fats, 'fatsChart');

});

    
function drawNutrientPieChart(nutrient, amount, threshold, elementId) {
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(() => {
        var data = google.visualization.arrayToDataTable([
            ['Status', 'Percentage'],
            ['Met', amount],
            ['Remaining', Math.max(threshold - amount, 0)]
        ]);

        var options = {
            pieHole: 0.4,
            slices: {
                0: { color: getColor(amount, threshold) },
                1: { color: '#e0e0e0' }  
            },
            pieSliceTextStyle: {
            color: 'black',
          },
          
          backgroundColor: 'transparent', 
            legend: { position: 'none' }, 
            chartArea: {
            left: "10%",
            top: "10%",
            height: "80%",
            width: "80%"
            },
            width: '100%', 
            height: '100%' 
        };

        var chart = new google.visualization.PieChart(document.getElementById(elementId));
        chart.draw(data, options);
    });
}
function updateMeal(mealType) {
    const checkbox = document.getElementById(mealType);
    const nutrition = JSON.parse(checkbox.getAttribute('data-nutrition'));


    fetch(`/update-meal/${mealType}`, {
    method: 'PUT',
    credentials: 'include',
    headers: {
        'Content-Type': 'application/json',
    },
    body: JSON.stringify({
        calories: nutrition.calorie, 
        protein:nutrition.protein, 
        carbs: nutrition.carb, 
        fat: nutrition.fat 

    })

})
.then(response => {
    if (!response.ok) {
        throw new Error('no response');
    }
    return response.json();
})
.then(data => {
    console.log('Success:', data);
    if(data.updatedNutrition) {
        updateChart(data.updatedNutrition); // Pass the updated nutrition data to the chart update function
    }
})
.catch(error => {
    console.error('Error:', error);
});

}

function updateChart(updatedNutrition){
    drawNutrientPieChart('Calories', updatedNutrition.calories, thresholds.calories, 'caloriesChart');
    drawNutrientPieChart('Protein', updatedNutrition.protein, thresholds.protein, 'proteinChart');
    drawNutrientPieChart('Carbs', updatedNutrition.carbs, thresholds.carbohydrates, 'carbsChart');
    drawNutrientPieChart('Fats', updatedNutrition.fat, thresholds.fats, 'fatsChart');

}

