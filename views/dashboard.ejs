                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">WELCOME USER!</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">MEAL PLAN</li>
                        </ol>
                        <div class="row">
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-matte-green text-white mb-4">
                                    <div class="card-body">Calorie intake
                                        <div id="caloriesChart" style="height: 200px;"></div> <!-- Adjust height as needed -->
                                    </div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-matte-lightergreen text-white mb-4">
                                    <div class="card-body">Protein intake
                                        <div id="proteinChart" style="height: 200px;"></div> <!-- Adjust height as needed -->
                                    </div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">

                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-matte-yellowts text-white mb-4">
                                    <div class="card-body">Fat intake
                                        <div id="fatsChart" style="height: 200px;"></div> <!-- Adjust height as needed -->
                                    </div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-matte-orangets text-white mb-4">
                                    <div class="card-body">Carbs intake
                                        <div id="carbsChart" style="height: 200px;"></div> <!-- Adjust height as needed -->
                                    </div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <% if (locals.messages && messages.error) { %>
                                <% messages.error.forEach(function(message) { %>
                                    <div class="alert alert-danger" role="alert">
                                        <%= message %>
                                    </div>
                                <% }); %>
                            <% } %>
                            <div class="card-group">
                                <div class="card">
                                    <img src="<%= meals.breakfast.image %>" class="card-img-top"  alt="Image of breakfast">
                                    <div class="card-body">
                                    <h5 class="card-title">Breakfast</h5>
                                    <input type="checkbox" 
                                        id="breakfast" 
                                        name="breakfast" 
                                        data-nutrition='<%- JSON.stringify(meals.breakfast.nutrition) %>' 
                                        onchange="updateMeal('breakfast')"
                                        <%= meals.breakfast.isChecked ? 'checked' : '' %>>
                                    <label for="breakfast"><%= meals.breakfast.name %></label>
                                    </div>
                                    <div class="card-footer">
                                    </div>
                                </div>
                               <div class="card">
                                    <img src="<%= meals.lunch.image %>" class="card-img-top"  alt="Image of lunch">
                                    <div class="card-body">
                                    <h5 class="card-title">Lunch</h5>
                                    <input type="checkbox" 
                                        id="lunch" 
                                        name="lunch" 
                                        data-nutrition='<%- JSON.stringify(meals.lunch.nutrition) %>' 
                                        onchange="updateMeal('lunch')"
                                        <%= meals.breakfast.isChecked ? 'checked' : '' %>>
                                    <label for="lunch"><%= meals.lunch.name %></label>
                                    </div>
                                    <div class="card-footer">
                                    </div>
                                </div>
                               <div class="card">
                                    <img src="<%= meals.dinner.image %>" class="card-img-top"  alt="Image of dinner">
                                    <div class="card-body">
                                    <h5 class="card-title">Dinner</h5>
                                    <input type="checkbox" 
                                        id="dinner" 
                                        name="dinner" 
                                        data-nutrition='<%- JSON.stringify(meals.dinner.nutrition) %>' 
                                        onchange="updateMeal('dinner')"
                                        <%= meals.breakfast.isChecked ? 'checked' : '' %>>
                                    <label for="dinner"><%= meals.dinner.name %></label>
                                    </div>
                                    <div class="card-footer">
                                    </div>
                                </div>
                                </div>
                        </div>
                    </div>
            

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-trophy me-1"></i>
                Leaderboard
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Names</th>
                            <th scope="col">Points</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((user, index) => { %>
                            <tr>
                                <th scope="row"><%= index + 1 %></th>
                                <td><%= user.fullName %></td>
                                <td><%= user.points %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
