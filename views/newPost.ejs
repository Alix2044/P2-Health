<head>
  <style>
    body{

    justify-content: center;
    align-items: center;
    min-height: 100vh;
    font-family: 'Jost', sans-serif;
    background: linear-gradient(to bottom, #C9D8B6, #50CB93, #C9D8B6);
}

.container {
  max-width: 1000px;
  margin: 0 auto;
}

/* Spacing utilities /
.mt-5 {
  margin-top: 3rem;
  font-family: 'Jost', sans-serif;
  color: #1B1C25;

}

.mb-4 {
  margin-bottom: 1.5rem;
  font-family: 'Jost', sans-serif;
  color: #fff;
  padding: 30px;
  background-color: #004445;

}

.mb-6 {
  margin-bottom: 3.5rem;
  font-family: 'Jost', sans-serif;
}

.pt-4 {
  padding-top: 1rem;
  font-family: 'Jost', sans-serif;
}

/ Form style */
.form-group {
  margin-bottom: 1.5rem;
  font-family: 'Jost', sans-serif;
}
.form-control {
  width: 100%;
  padding: 0.5rem 0.75rem;
  font-size: 1rem;
  line-height: 1.5;
  color: #1C1427;
  background-color: #fff;
  background-clip: padding-box;
  border: 1px solid #ced4da;
  border-radius: 0.25rem;
  transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
  font-family: 'Jost', sans-serif;
}

.form-control:focus {
  border-color: #61B15A;
  outline: 0;
  box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

.btn-primary {
  color: #fff;
  background-color: #57837B;
  border-color: #57837B;
  font-family: 'Jost', sans-serif;
}

.btn-primary:hover {
  color: #fff;
  background-color: #5AA469;
  border-color: #5AA469;
  font-family: 'Jost', sans-serif;
}

/* Custom file input */
.formbold-form-label {
  display: block;
  margin-bottom: 0.25rem;
  font-weight: bold;
  font-family: 'Jost', sans-serif;
}

.formbold-file-input {
  position: relative;
}

.formbold-file-input input[type="file"] {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  cursor: pointer;
}

.formbold-file-list {
  display: flex;
  flex-wrap: wrap;
}

.formbold-file-item {
  margin-right: 1rem;
  margin-bottom: 1rem;
}

.formbold-file-name {
  display: block;
  margin-bottom: 0.5rem;
}

.formbold-progress-bar {
  width: 00%;
  background-color: #61B15A;
  border-radius: 0.25rem;
  overflow: hidden;
}

.formbold-progress {
  height: 4px;
  background-color: #61B15A;
  transition: width 0.3s ease-in-out;
}

.formbold-browse {
  color: #fff;
  background-color: #004445;
  border: 4px solid #004445;

}
  </style>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<%- include('partials/header') %>



<div class="container mt-5">
  <h2 class="mb-4">Create a New Post</h2>
  <form action="/posts/new" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="title" required>
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea class="form-control" id="content" name="content" rows="5" required></textarea>
    </div>
    
          <div class="mb-6 pt-4">
            <label class="formbold-form-label formbold-form-label-2">
              Upload File
            </label>

            <div class="formbold-mb-5 formbold-file-input">
              <input type="file" name="image" id="file" onchange="updateFileName(this)"  />
              <label for="image">
                <div>
                  <span class="formbold-drop-file"> Drop files here </span>
                  <span class="formbold-or"> Or </span>
                  <span class="formbold-browse"> Browse </span>
                </div>
              </label>
            </div>


           <div id="file-name"></div>
          </div>
          
          <button type="submit" class="btn btn-primary">Create Post</button>
        </form>
      </div>
    </div>
  </form>
</div>
<script>
  
  function updateFileName(input) {
    const fileName = input.files[0].name;
    document.getElementById('file-name').innerText = `Selected file: ${fileName}`;
  }
</script>

<%- include('partials/footer') %>
